<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">

    <context-param>
        <param-name>javax.faces.Opentheso</param-name>
        <param-value>Opentheso</param-value>
    </context-param>

    <context-param>
        <param-name>version</param-name>
        <param-value>24.02.04</param-value>
    </context-param>

    <!-- thème de Primefaces omega (n'est plus supporté dans la version 10 de primefaces) -->
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>saga</param-value>
    </context-param>  

    <context-param>
         <param-name>primefaces.FONT_AWESOME</param-name>
         <param-value>true</param-value>
    </context-param>
    
    <login-config>
        <auth-method>FORM</auth-method>
        <form-login-config>
            <form-login-page>/index.xhtml</form-login-page>
            <form-error-page>/errorPages/timeOut.xhtml</form-error-page>
        </form-login-config>
    </login-config>

    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>

    <!-- pour le webservices-->
    <servlet>
        <servlet-name>Jersey REST Service</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>fr.cnrs.opentheso.ws.api</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
     <servlet-mapping>
        <servlet-name>Jersey REST Service</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
    
        
     <servlet>
        <servlet-name>Jersey REST Service Openapi v1</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>
                io.swagger.v3.jaxrs2.integration.resources,
                fr.cnrs.opentheso.ws.openapi.v1
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey REST Service Openapi v1</servlet-name>
        <url-pattern>/openapi/v1/*</url-pattern>
    </servlet-mapping>
    
        <servlet>
        <servlet-name>Jersey REST Service Openapi doc config</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>
                fr.cnrs.opentheso.ws.openapi.doc
            </param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Jersey REST Service Openapi doc config</servlet-name>
        <url-pattern>/openapi/doc/config/*</url-pattern>
    </servlet-mapping>      
    
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>

    <!-- Attention !!! la gestion du timeout de la session se trouve dans le fichier de conf preferences.properties (timeout_nbr_minute=30)
    il faut veuillez à ce que le chiffre en dessous soit plus grand que celui dans le fichier de conf (preferences.properties)
    -->
    <session-config>
        <session-timeout>
            80
        </session-timeout>
    </session-config>

    


    <welcome-file-list>
        <welcome-file>index.xhtml</welcome-file>
    </welcome-file-list>
    
    <error-page>
        <error-code>404</error-code>
        <location>/errorPages/error404.xhtml</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/errorPages/error500.xhtml</location>
    </error-page>

    <error-page>
        <exception-type>javax.faces.application.ViewExpiredException</exception-type>
        <location>/index.xhtml</location>
    </error-page>    
    
    <display-name>Archetype Created Web Application</display-name>
    <resource-env-ref>
        <!-- Enable Weld CDI, also needs META-INF/context.xml entry -->
        <resource-env-ref-name>BeanManager</resource-env-ref-name>
        <resource-env-ref-type>javax.enterprise.inject.spi.BeanManager</resource-env-ref-type>
    </resource-env-ref>

    <listener>
        <listener-class>fr.cnrs.opentheso.StartupListener</listener-class>
    </listener>
</web-app>
