<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config xmlns="https://jakarta.ee/xml/ns/jakartaee"
              xmlns:xml="http://www.w3.org/XML/1998/namespace"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee 
                    https://jakarta.ee/xml/ns/jakartaee/web-facesconfig_4_0.xsd"
              version="4.0">
     <application>
        <resource-bundle>
            <base-name>hikari</base-name>
            <var>conHikari</var>
        </resource-bundle>
        <message-bundle>hikari</message-bundle>
    </application>
     <application>
        <resource-bundle>
            <base-name>preferences</base-name>
            <var>pref</var>
        </resource-bundle>
        <message-bundle>preferences</message-bundle>
    </application>
   
    <application>
        <locale-config>
            <default-locale>fr</default-locale>
        </locale-config>
        <resource-bundle>
            <base-name>language/site</base-name>
            <var>langue_fr</var>
        </resource-bundle>
        <message-bundle>language/site</message-bundle>
    </application>
    <application>
        <resource-bundle>
            <base-name>language/site_en</base-name>
            <var>langue_en</var>
        </resource-bundle>
        <message-bundle>language/site_en</message-bundle>
    </application>
    <application>
        <resource-bundle>
            <base-name>language/site_es</base-name>
            <var>langue_es</var>
        </resource-bundle>
        <message-bundle>language/site_es</message-bundle>
    </application>
    <application>
        <resource-bundle>
            <base-name>language/site_de</base-name>
            <var>langue_de</var>
        </resource-bundle>
        <message-bundle>language/site_de</message-bundle>
    </application>     
   
   
   
   
</faces-config>

