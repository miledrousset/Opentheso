            <artifactId>font-awesome</artifactId>
            <version>5.12.0</version>
        </dependency>         
        
        <!-- CDI beans inject dependency -->
        <dependency>
            <groupId>javax.enterprise</groupId>
            <artifactId>cdi-api</artifactId>
            <version>2.0</version>
            <scope>provided</scope>
        </dependency>
        
        <!-- JSF dependency -->
        <dependency>
